{
  "name": "brdemo-monorepo",
  "private": true,
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "scripts": {
    "start:backend": "cd backend && npx wrangler dev --local --port 8787",
    "start:frontend": "cd frontend && npm run serve",
    "dev": "concurrently \"npm: start:backend\" \"npm: start:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "publish:backend": "cd backend && npx wrangler publish"
  }
}
